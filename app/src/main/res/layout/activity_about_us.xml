<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsActivity">

    <LinearLayout
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/logo" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/img"
        android:paddingTop="30dp" >

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:background="#808080" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/text1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/line"
        android:gravity="center"
        android:paddingTop="10dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/text2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/text1"
        android:gravity="center"
        android:paddingTop="10dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BABY-DAILY: A MOBILE APPLICATION FOR MONITORING BABYâ€™S HEALTH."
            android:textStyle="bold"
            android:textSize="16dp"
            android:textAlignment="center"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/text3"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/text2"
        android:gravity="center"
        android:paddingTop="10dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="If you want to contact us we are available at"
            android:textSize="16dp"
            android:textAlignment="center"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/text4"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/text3"
        android:gravity="center"
        android:paddingTop="10dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/developer"
            android:textSize="16dp"
            android:textColor="@color/blue"
            android:textAlignment="center"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/text5"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/text4"
        android:gravity="center"
        android:paddingTop="10dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="An Application for Final Year Project of Universiti Teknologi Mara"
            android:textSize="16dp"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"/>
    </LinearLayout>




</RelativeLayout>