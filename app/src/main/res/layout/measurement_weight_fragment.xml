<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weight : Birth to 2 years"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chartA"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_below="@id/text1"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scalable Graph for Weight"
            android:textSize="10dp"
            android:textStyle="italic"
            android:gravity="center_horizontal"
            android:layout_below="@+id/chartA"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weight : 2 to 5 years"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@+id/text2"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chartB"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_below="@id/text3"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scalable Graph for Weight"
            android:textSize="10dp"
            android:textStyle="italic"
            android:gravity="center_horizontal"
            android:layout_below="@+id/chartB" />

    </LinearLayout>

</RelativeLayout>