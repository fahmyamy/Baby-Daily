<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:id="@+id/lineChat">

    <LinearLayout
        android:id="@+id/sender_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_chat_box"
        android:layout_margin="6dp"
        android:layout_gravity="end"
        android:orientation="horizontal"

        android:weightSum="3">

        <TextView
            android:id="@+id/textContent_sender"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:text="Message"
            android:textSize="16sp"
            android:layout_weight="2"/>

        <TextView
            android:id="@+id/dateTime_sender"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:gravity="bottom"
            android:text="18/12/2018 23:43"
            android:textSize="12sp"
            android:textStyle="italic"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/receiver_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_chat_box2"
        android:layout_gravity="start"
        android:layout_margin="6dp"
        android:orientation="horizontal"

        android:weightSum="3">

        <TextView
            android:id="@+id/textContent_receiver"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:text="Message"
            android:textSize="16sp"
            android:layout_weight="2"/>

        <TextView
            android:id="@+id/dateTime_receiver"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:gravity="bottom"
            android:text="18/12/2018 23:43"
            android:textSize="12sp"
            android:textStyle="italic"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>